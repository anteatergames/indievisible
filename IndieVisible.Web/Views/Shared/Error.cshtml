<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../images/favicon.ico">

    <title>Error - INDIEVISIBLE</title>

    <!-- Bootstrap 4.1.3-->
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css">

    <!-- Main-->
    <link rel="stylesheet" href="~/css/main.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css">

    <!-- Ionicons -->
    <link rel="stylesheet" href="~/lib/ionicons/css/ionicons.min.css">

    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/master_style.css">

    <!-- Minimal-art Admin Skins. Choose a skin from the css/skins
       folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="~/css/skins/indievisible-skin.css">


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">

</head>
<body class="hold-transition">
    <div class="error-body">
        <div class="error-page">

            <div class="error-content">
                <div class="container">

                    <h2 class="headline text-orange"> ERROR</h2>

                    <h3 class="margin-top-0"><i class="fa fa-warning text-orange"></i> PAGE NOT FOUND !</h3>

                    <p>
                        YOU SEEM TO BE TRYING TO FIND HIS WAY HOME
                    </p>
                    <div class="text-center">
                        <a asp-area="" asp-controller="home" asp-action="index" class="btn btn-orange btn-block btn-flat margin-top-10">Back to home page</a>
                    </div>
                    <h5>or <br>Try using the search form.</h5>

                    <form class="search-form form-element">
                        <div class="input-group">
                            <input type="text" name="search" class="form-control" placeholder="Search">

                            <div class="input-group-btn">
                                <button type="submit" name="submit" class="btn btn-orange btn-flat">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                        <!-- /.input-group -->
                    </form>
                    @if (Model.ShowRequestId)
                    {
                        <p>
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }
                </div>
            </div>
            <!-- /.error-content -->
            <footer class="main-footer">
                Copyright &copy; 2018 <a href="https://www.indievisible.net/">IndieVisible</a>.
            </footer>

        </div>
        <!-- /.error-page -->
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper.js/umd/popper.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>




</body>
</html>